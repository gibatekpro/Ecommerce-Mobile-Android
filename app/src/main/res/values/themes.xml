<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EcommerceAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EcommerceAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.EcommerceAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewPopupTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupBackground">@color/search_bar_background_color</item>
        <item name="android:textColor">@color/search_bar_text_color</item>
        <!-- Add more customizations if needed -->
    </style>

    <style name="Theme.EcommerceAndroid.Button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="NoBorderButton">
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>